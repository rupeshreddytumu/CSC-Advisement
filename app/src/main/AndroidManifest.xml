<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calebdavis.cscadvisement" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher"
        android:name=".DatabaseHelpers.ParseApplication">

        <meta-data android:name="DATABASE" android:value="CSC_Advisement.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.calebdavis.cscadvisement" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Activities.LoginSignupActivity"
            android:label="Sign in" >
        </activity>

        <activity
            android:name=".Activities.Welcome"
            android:label="Welcome" >
        </activity>

        <activity
            android:name=".Activities.CoursesTakenActivity"
            android:label="Courses Taken" >
        </activity>
    </application>

</manifest>
